---
import { type CollectionEntry } from "astro:content";
import MainLayout from "@/layouts/MainLayout.astro";
import MainHero from "@/components/MainHero.astro";
const {heroImage, title, subTitle, tags, imgOne, imgTwo} = Astro.props;
type Props = CollectionEntry <"work">["data"];

---

<MainLayout title={title}>

    <MainHero title={title} subTitle={subTitle} />

    <section class="projects" data-scroll-section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 descriptionProject d-none d-xxl-block d-xl-block d-lg-block" data-scroll>
                    <p class="prose">
                        <slot />
                    </p>
                    <div class="grid gap-3" data-scroll>
                        {tags.map((tag: string) => (
                            <span class="badge text-bg-light me-2">{tag}</span>
                           ))}
                      </div>
                </div>

                  <div class="col-lg-8 col-md-12 col-sm-12 imagesProject">
                    {heroImage && heroImage !== "" && <img class="img-fluid w-100 rounded my-4 image" src={heroImage} alt={title} />}
                    {imgOne && imgOne !== "" && <img class="img-fluid w-100 rounded my-4 image" src={imgOne} alt={title} />}
                    {imgTwo && imgTwo !== "" && <img class="img-fluid w-100 rounded my-4 image" src={imgTwo} alt={title} />}
                  </div>
                <div class="col-lg-4 col-md-12 col-sm-12 mt-4 descriptionProject d-block d-sm-none" data-scroll>
                    <p class="prose">
                        <slot />
                    </p>
                    <div class="grid gap-3" data-scroll>
                        {tags.map((tag: string) => (
                            <span class="badge text-bg-light me-2">{tag}</span>
                           ))}
                      </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    
                </div>
            </div>
        </div>
    </section>

</MainLayout>