---
import MainHead from '@/components/MainHead.astro';
import Navbar from '@/components/Navbar.astro';
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MainHead {title} />
  </head>

    <body id="page-top" class="page">
      <main data-scroll-container>
        <!-- Cursor effect -->
          <div class="cursor"></div>
        <!-- Navbar -->
        <Navbar />
        <!-- Main Content with scroll container -->
        <div class="container-fluid p-0">
          <slot /> 
        </div>
            <!-- Bootstrap core JS-->
            <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
            <!-- GSAP, ScrollTrigger, Locomotive Scroll -->
            <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
            <script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
            <script is:inline src="https://unpkg.com/split-type"></script>
            <script is:inline src="https://unpkg.com/locomotive-scroll/dist/locomotive-scroll.min.js"></script>
            <script is:inline src="/assets/js/scripts.js" defer></script>

            <!-- Toast -->
            <div id="copyToast" class="toast align-items-center text-bg-success border-0 position-fixed top-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true">
              <div class="d-flex">
                <div class="toast-body">
                  Email copiado!!!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
              </div>
            </div>
      </main>
    </body>
</html>