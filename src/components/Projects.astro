---
import { getCollection } from 'astro:content';
import Project from '@/components/Project.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => (b.data.pubDate?.getTime() || 0) - (a.data.pubDate?.getTime() || 0)
);
---


        <!-- Portfolio Grid-->
        <section class="sctn" id="portfolio" data-scroll-section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 bigTitle">
                        <div class="title1 w-100">
                            <h1 id="portfolioText" class="w-100 text-center">PROYECTOS </span></h1>
                        </div>
                        <div class="title2 w-100">
                            <h1 id="portfolioText" class="w-100 text-center"><span>SELECCIONADOS</span></h1>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <nav class="menu">
                        <ul>
                          {projects.map((project) => (
                            <Project {...project.data} slug={project.slug} />
                          ))}
                        </ul>
                      </nav>
            </div>
        </section>