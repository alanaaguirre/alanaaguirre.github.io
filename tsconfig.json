{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*":[
        "src/*"
      ]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,  // Esta opci√≥n garantiza que todos los tipos sean estrictos
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  }
}
